{
  "name": "@metaverso/build-backend",
  "version": "1.0.0",
  "description": "Backend API para el sistema de build de WoldVirtual3D",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "dev:watch": "nodemon src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write 'src/**/*.{ts,js,json}'",
    "clean": "rimraf dist coverage",
    "migrate": "node dist/database/migrate.js",
    "seed": "node dist/database/seed.js",
    "docker:build": "docker build -t metaverso-build-backend .",
    "docker:run": "docker run -p 3001:3001 metaverso-build-backend",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "uuid": "^9.0.1",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "socket.io": "^4.7.4",
    "redis": "^4.6.10",
    "ioredis": "^5.3.2",
    "mongoose": "^8.0.3",
    "prisma": "^5.7.1",
    "@prisma/client": "^5.7.1",
    "pg": "^8.11.3",
    "mysql2": "^3.6.5",
    "sqlite3": "^5.1.6",
    "sequelize": "^6.35.2",
    "typeorm": "^0.3.17",
    "bull": "^4.12.2",
    "agenda": "^5.0.0",
    "node-cache": "^5.1.2",
    "memory-cache": "^0.2.0",
    "axios": "^1.6.2",
    "node-fetch": "^3.3.2",
    "form-data": "^4.0.0",
    "ws": "^8.14.2",
    "graphql": "^16.8.1",
    "apollo-server-express": "^3.12.1",
    "type-graphql": "^2.0.0-beta.3",
    "reflect-metadata": "^0.1.13",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "openapi-types": "^12.1.3",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "faker": "^6.6.6",
    "factory-bot": "^6.1.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/uuid": "^9.0.7",
    "@types/node-cron": "^3.0.11",
    "@types/socket.io": "^3.0.2",
    "@types/ws": "^8.5.10",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
