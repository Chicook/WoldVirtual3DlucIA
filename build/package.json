{
  "name": "@metaverso/build",
  "version": "1.0.0",
  "description": "Build System & Pipeline for Metaverso Web3",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run build:all",
    "build:all": "npm run build:contracts && npm run build:backend && npm run build:frontend && npm run build:assets",
    "build:contracts": "forge build && npm run optimize:contracts",
    "build:backend": "tsc -p backend/tsconfig.json && npm run bundle:backend",
    "build:frontend": "vite build --config frontend/vite.config.ts",
    "build:assets": "tsc -p assets/tsconfig.json && npm run optimize:assets",
    "build:types": "tsc --emitDeclarationOnly",
    "build:system": "tsc && node dist/index.js",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "progress": "npm run dev -- progress",
    "analyze": "npm run dev -- analyze",
    "clean": "npm run dev -- clean",
    "info": "npm run dev -- info",
    "optimize:contracts": "node scripts/optimize-contracts.js",
    "optimize:assets": "node scripts/optimize-assets.js",
    "bundle:backend": "webpack --config backend/webpack.config.js",
    "bundle:frontend": "webpack --config frontend/webpack.config.js",
    "test": "npm run test:contracts && npm run test:backend && npm run test:frontend",
    "test:contracts": "forge test",
    "test:backend": "jest --config backend/jest.config.js",
    "test:frontend": "jest --config frontend/jest.config.js",
    "lint": "npm run lint:contracts && npm run lint:backend && npm run lint:frontend",
    "lint:contracts": "solhint 'contracts/**/*.sol'",
    "lint:backend": "eslint backend/src --ext .ts",
    "lint:frontend": "eslint frontend/src --ext .ts,.tsx",
    "format": "npm run format:contracts && npm run format:backend && npm run format:frontend",
    "format:contracts": "forge fmt",
    "format:backend": "prettier --write 'backend/src/**/*.{ts,js}'",
    "format:frontend": "prettier --write 'frontend/src/**/*.{ts,tsx,js,jsx}'",
    "clean:all": "rimraf dist out build coverage .nyc_output",
    "clean:contracts": "forge clean",
    "clean:backend": "rimraf backend/dist backend/build",
    "clean:frontend": "rimraf frontend/dist frontend/build",
    "deploy": "npm run deploy:contracts && npm run deploy:backend && npm run deploy:frontend",
    "deploy:contracts": "forge script Deploy --rpc-url $RPC_URL --broadcast --verify",
    "deploy:backend": "node scripts/deploy-backend.js",
    "deploy:frontend": "node scripts/deploy-frontend.js",
    "analyze:contracts": "slither contracts/",
    "analyze:backend": "node scripts/analyze-backend.js",
    "analyze:frontend": "node scripts/analyze-frontend.js",
    "size": "npm run size:contracts && npm run size:backend && npm run size:frontend",
    "size:contracts": "forge build --sizes",
    "size:backend": "node scripts/size-backend.js",
    "size:frontend": "node scripts/size-frontend.js",
    "monitor": "node scripts/monitor-build.js",
    "validate": "npm run validate:contracts && npm run validate:backend && npm run validate:frontend",
    "validate:contracts": "node scripts/validate-contracts.js",
    "validate:backend": "node scripts/validate-backend.js",
    "validate:frontend": "node scripts/validate-frontend.js",
    "sign": "node scripts/sign-build.js",
    "verify": "node scripts/verify-build.js",
    "publish": "npm run build && npm run sign && npm run publish:all",
    "publish:all": "node scripts/publish-all.js"
  },
  "dependencies": {
    "typescript": "^5.0.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "vite": "^4.4.0",
    "esbuild": "^0.18.0",
    "rollup": "^3.28.0",
    "terser": "^5.19.0",
    "cssnano": "^6.0.0",
    "postcss": "^8.4.0",
    "autoprefixer": "^10.4.0",
    "sass": "^1.69.0",
    "less": "^4.2.0",
    "stylus": "^0.62.0",
    "imagemin": "^8.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.0",
    "imagemin-svgo": "^3.0.0",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-webp": "^8.0.0",
    "sharp": "^0.32.0",
    "ffmpeg-static": "^5.2.0",
    "gltf-pipeline": "^3.0.0",
    "draco3d": "^1.5.0",
    "ktx-parse": "^0.4.0",
    "basis-universal": "^1.16.0",
    "forge": "^0.2.0",
    "hardhat": "^2.19.0",
    "foundry": "^0.2.0",
    "solc": "^0.8.19",
    "slither-analyzer": "^0.9.0",
    "mythril": "^0.23.0",
    "echidna": "^2.0.0",
    "manticore": "^0.3.0",
    "winston": "^3.11.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.0",
    "commander": "^11.0.0",
    "yargs": "^17.7.0",
    "dotenv": "^16.3.0",
    "cross-env": "^7.0.3",
    "rimraf": "^5.0.0",
    "fs-extra": "^11.1.0",
    "glob": "^10.3.0",
    "minimatch": "^9.0.0",
    "crypto": "^1.0.1",
    "zlib": "^1.0.5",
    "archiver": "^6.0.0",
    "extract-zip": "^2.0.1",
    "tar": "^6.2.0",
    "node-gzip": "^1.1.0",
    "brotli": "^1.3.2",
    "lz4": "^0.6.5",
    "snappy": "^7.2.0"
  },
