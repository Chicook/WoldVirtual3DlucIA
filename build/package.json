    "@types/snappy": "^6.2.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "prettier": "^3.0.0",
    "solhint": "^3.4.0",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.0",
    "commitizen": "^4.3.0",
