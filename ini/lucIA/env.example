# ===========================================
# LUCIA IA - VARIABLES DE ENTORNO DE EJEMPLO
# ===========================================
# COPIA ESTE ARCHIVO COMO .env Y CONFIGURA TUS CLAVES REALES

# ===========================================
# OPENAI API (ChatGPT)
# ===========================================
# Obtén tu clave gratuita en: https://platform.openai.com/api-keys
OPENAI_API_KEY=tu_clave_api_de_openai_aqui

# ===========================================
# HUGGINGFACE API (Gratuita)
# ===========================================
# Obtén tu clave gratuita en: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=tu_clave_api_de_huggingface_aqui

# ===========================================
# ANTHROPIC API (Claude)
# ===========================================
# Obtén tu clave en: https://console.anthropic.com/
ANTHROPIC_API_KEY=tu_clave_api_de_anthropic_aqui

# ===========================================
# GOOGLE GEMINI API
# ===========================================
# Obtén tu clave en: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=tu_clave_api_de_gemini_aqui

# ===========================================
# CONFIGURACIÓN DE LUCIA
# ===========================================
# Personalidad por defecto: amigable, profesional, creativo, analítico, divertido, empático, metaverso
LUCIA_DEFAULT_PERSONALITY=metaverso

# Nivel de verbosidad de los logs (DEBUG, INFO, WARNING, ERROR)
LUCIA_LOG_LEVEL=INFO

# Habilitar/deshabilitar características
LUCIA_ENABLE_PARAPHRASING=true
LUCIA_ENABLE_MEMORY_LEARNING=true
LUCIA_ENABLE_API_ROTATION=true

# ===========================================
# CONFIGURACIÓN DE SEGURIDAD
# ===========================================
# Encriptar datos sensibles en memoria
LUCIA_ENCRYPT_SENSITIVE_DATA=true

# Registrar llamadas a APIs (para debugging)
LUCIA_LOG_API_CALLS=false

# Límite de velocidad para evitar spam
LUCIA_RATE_LIMITING=true 