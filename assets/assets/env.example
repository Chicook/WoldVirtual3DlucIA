# Configuración del Sistema de Assets del Metaverso
# Copia este archivo como .env y configura tus valores

# Configuración de IPFS
IPFS_API_KEY=tu_api_key_de_infura
IPFS_ENDPOINT=https://ipfs.infura.io:5001

# Configuración de Arweave
ARWEAVE_WALLET=tu_wallet_de_arweave
ARWEAVE_ENDPOINT=https://arweave.net

# Configuración de AWS S3
AWS_ACCESS_KEY_ID=tu_access_key_id
AWS_SECRET_ACCESS_KEY=tu_secret_access_key
AWS_REGION=us-east-1
AWS_BUCKET=metaverso-assets

# Configuración de la base de datos
DATABASE_URL=sqlite:./data/assets.db

# Configuración de seguridad
JWT_SECRET=tu_jwt_secret_super_seguro
ENCRYPTION_KEY=tu_clave_de_encriptacion

# Configuración de rendimiento
MAX_CONCURRENT_UPLOADS=5
MAX_FILE_SIZE=104857600
BATCH_SIZE=10

# Configuración de logs
LOG_LEVEL=info
LOG_FILE=./logs/assets.log

# Configuración de API
API_PORT=3001
API_HOST=localhost

# Configuración de monitoreo
ENABLE_METRICS=true
ENABLE_ALERTS=false 