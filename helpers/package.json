{
  "name": "@metaverso/helpers",
  "version": "1.0.0",
  "description": "Sistema completo de helpers y utilidades para el desarrollo del metaverso 3D descentralizado",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "test:performance": "jest --config jest.performance.config.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "docs": "typedoc src/index.ts --out docs",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build && npm test",
    "example": "ts-node examples/basic-usage.ts",
    "example:web3": "ts-node examples/web3-helpers.ts",
    "example:performance": "ts-node examples/performance-helpers.ts"
  },
  "keywords": [
    "metaverso",
    "helpers",
    "threejs",
    "webgl",
    "webgpu",
    "web3",
    "blockchain",
    "debugging",
    "visualization",
    "development"
  ],
  "author": "Metaverso Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tu-usuario/metaverso-crypto-world-virtual-3d.git",
    "directory": "helpers"
  },
  "bugs": {
    "url": "https://github.com/tu-usuario/metaverso-crypto-world-virtual-3d/issues"
  },
  "homepage": "https://github.com/tu-usuario/metaverso-crypto-world-virtual-3d#readme",
  "dependencies": {
    "three": "^0.158.0",
    "@types/three": "^0.158.0",
    "ethers": "^6.8.0",
    "ipfs-http-client": "^60.0.0",
    "stats.js": "^0.17.0",
    "dat.gui": "^0.7.9",
    "lil-gui": "^0.18.2",
    "cannon-es": "^0.20.0",
    "ammo.js": "^0.0.10"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.25.0",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "three": "^0.158.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  }
} 