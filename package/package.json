{
  "name": "apollo-package-manager",
  "version": "1.0.0",
  "description": "Sistema Apollo para gestiÃ³n inteligente de paquetes y dependencias faltantes",
  "main": "apollo-package-manager.js",
  "scripts": {
    "start": "node apollo-package-manager.js",
    "dev": "nodemon apollo-package-manager.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "echo 'No build step required for Node.js application'",
    "clean": "rm -rf node_modules package-lock.json",
    "install-deps": "npm install",
    "update-deps": "npm update",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "docker:build": "docker build -t apollo-package-manager .",
    "docker:run": "docker run -p 4001:4001 apollo-package-manager",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "health": "curl http://localhost:4001/api/health",
    "analyze": "curl http://localhost:4001/api/analyze-modules",
    "scan": "curl http://localhost:4001/api/scan-dependencies",
    "restore": "curl -X POST http://localhost:4001/api/restore-all",
    "report": "curl http://localhost:4001/api/generate-report"
  },
  "keywords": [
    "apollo",
    "graphql",
    "package-manager",
    "dependencies",
    "npm",
    "nodejs",
    "metaverso",
    "blockchain",
    "crypto",
    "3d",
    "virtual-world"
  ],
  "author": "Metaverso Crypto World Virtual 3D Team",
  "license": "MIT",
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "@apollo/studio": "^1.0.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "graphql": "^16.8.1",
    "graphql-tag": "^2.12.6",
    "uuid": "^9.0.1",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/metaverso-crypto-world-virtual-3d/apollo-package-manager.git"
  },
  "bugs": {
    "url": "https://github.com/metaverso-crypto-world-virtual-3d/apollo-package-manager/issues"
  },
  "homepage": "https://github.com/metaverso-crypto-world-virtual-3d/apollo-package-manager#readme",
  "config": {
    "port": 4001,
    "host": "localhost",
    "graphqlPath": "/graphql",
    "studioPath": "/studio",
    "dashboardPath": "/dashboard"
  },
  "apollo": {
    "studio": {
      "endpoint": "/graphql",
      "title": "Apollo Package Manager GraphQL API"
    }
  }
} 