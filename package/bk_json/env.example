# Configuración del servidor Apollo Package Manager
NODE_ENV=development
PACKAGE_MANAGER_PORT=4001
PACKAGE_MANAGER_HOST=localhost

# Configuración de GraphQL
GRAPHQL_PATH=/graphql
APOLLO_STUDIO_PATH=/studio
DASHBOARD_PATH=/dashboard

# Configuración de cache
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Configuración de base de datos (opcional)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=package_manager
DB_USER=package_user
DB_PASSWORD=package_password

# Configuración de Redis (opcional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Configuración de logging
LOG_LEVEL=info
LOG_FILE=logs/apollo-package-manager.log

# Configuración de seguridad
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Configuración de rate limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de análisis
ANALYSIS_BATCH_SIZE=10
ANALYSIS_TIMEOUT=30000
RESTORE_TIMEOUT=60000

# Configuración de notificaciones
NOTIFICATIONS_ENABLED=false
SLACK_WEBHOOK_URL=
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=
EMAIL_USER=
EMAIL_PASSWORD=

# Configuración de monitoreo
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Configuración de desarrollo
DEBUG=false
HOT_RELOAD=true 