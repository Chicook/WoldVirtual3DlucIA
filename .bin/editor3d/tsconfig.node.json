{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node", "vite/client", "vitest/globals"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@config/*": ["./config/*"],
      "@scripts/*": ["./scripts/*"]
    },
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.cache/.tsbuildinfo.node"
  },
  "include": [
    "vite.config.ts",
    "vitest.config.ts",
    "jest.config.js",
    "scripts/**/*",
    "config/**/*",
    "**/*.config.{js,ts}",
    "**/*.config.{js,ts}x"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "src/**/*"
  ]
} 