{
  "metaverso": {
    "name": "Metaverso Crypto World Virtual 3D",
    "version": "1.0.0",
    "description": "Plataforma completa del metaverso descentralizado con blockchain, DeFi, NFTs y realidad virtual",
    "environment": "development",
    "debug": true,
    "autoStart": true
  },
  "modules": {
    "web": {
      "enabled": true,
      "priority": "high",
      "path": "../web",
      "port": 3000,
      "dependencies": ["backend", "bloc", "assets", "components"],
      "config": {
        "threejs": {
          "antialias": true,
          "shadows": true,
          "postprocessing": true,
          "renderer": "webgl2"
        },
        "audio": {
          "enabled": true,
          "spatial": true,
          "ambient": true,
          "volume": 0.7
        },
        "blockchain": {
          "network": "ethereum",
          "autoConnect": true,
          "gasLimit": 3000000
        }
      }
    },
    "backend": {
      "enabled": true,
      "priority": "high",
      "path": "../backend",
      "port": 8000,
      "dependencies": ["bloc", "entities", "gateway"],
      "config": {
        "api": {
          "host": "0.0.0.0",
          "port": 8000,
          "workers": 4,
          "cors": {
            "origins": ["http://localhost:3000", "http://localhost:3001"],
            "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"]
          }
        },
        "database": {
          "type": "postgresql",
          "url": "postgresql://metaverso:password@localhost:5432/metaverso"
        },
        "redis": {
          "url": "redis://localhost:6379"
        }
      }
    },
    "bloc": {
      "enabled": true,
      "priority": "high",
      "path": "../bloc",
      "dependencies": ["protocol"],
      "config": {
        "networks": {
          "ethereum": {
            "rpcUrl": "https://mainnet.infura.io/v3/YOUR_PROJECT_ID",
            "chainId": 1,
            "gasLimit": 3000000
          },
          "polygon": {
            "rpcUrl": "https://polygon-rpc.com",
            "chainId": 137,
            "gasLimit": 3000000
          },
          "bsc": {
            "rpcUrl": "https://bsc-dataseed.binance.org",
            "chainId": 56,
            "gasLimit": 3000000
          }
        },
        "contracts": {
          "metaversoCore": "0x0000000000000000000000000000000000000000",
          "metaversoToken": "0x0000000000000000000000000000000000000000",
          "metaversoNFT": "0x0000000000000000000000000000000000000000",
          "metaversoDeFi": "0x0000000000000000000000000000000000000000",
          "metaversoGovernance": "0x0000000000000000000000000000000000000000"
        }
      }
    },
    "assets": {
      "enabled": true,
      "priority": "medium",
      "path": "../assets",
      "dependencies": ["web", "backend"],
      "config": {
        "storage": {
          "type": "ipfs",
          "gateway": "https://ipfs.io/ipfs/",
          "pinata": {
            "apiKey": "your_pinata_api_key",
            "secretKey": "your_pinata_secret_key"
          }
        },
        "optimization": {
          "images": true,
          "models": true,
          "audio": true,
          "compression": true
        }
      }
    },
    "components": {
      "enabled": true,
      "priority": "medium",
      "path": "../components",
      "dependencies": ["web", "helpers"],
      "config": {
        "react": {
          "version": "18.2.0",
          "strictMode": true
        },
        "threejs": {
          "version": "0.158.0",
          "fiber": true,
          "drei": true
        }
      }
    },
    "entities": {
      "enabled": true,
      "priority": "medium",
      "path": "../entities",
      "dependencies": ["bloc"],
      "config": {
        "system": {
          "type": "ecs",
          "maxEntities": 10000,
          "autoCleanup": true
        },
        "sync": {
          "enabled": true,
          "interval": 1000,
          "batchSize": 100
        }
      }
    },
    "fonts": {
      "enabled": true,
      "priority": "low",
      "path": "../fonts",
      "dependencies": ["web", "assets"],
      "config": {
        "storage": {
          "type": "ipfs",
          "cache": true
        },
        "optimization": {
          "subsetting": true,
          "compression": true
        }
      }
    },
    "helpers": {
      "enabled": true,
      "priority": "low",
      "path": "../helpers",
      "dependencies": ["web"],
      "config": {
        "debugging": {
          "enabled": true,
          "gui": true,
          "stats": true
        },
        "performance": {
          "monitoring": true,
          "profiling": true
        }
      }
    },
    "image": {
      "enabled": true,
      "priority": "low",
      "path": "../image",
      "dependencies": ["web", "assets"],
      "config": {
        "processing": {
          "formats": ["jpg", "png", "webp", "avif"],
          "optimization": true,
          "resizing": true
        },
        "generation": {
          "procedural": true,
          "ai": false
        }
      }
    },
    "languages": {
      "enabled": true,
      "priority": "low",
      "path": "../languages",
      "dependencies": ["web", "backend"],
      "config": {
        "supported": ["es", "en", "fr", "de", "it", "pt", "ja", "ko", "zh"],
        "default": "es",
        "detection": true,
        "fallback": "en"
      }
    },
    "cli": {
      "enabled": true,
      "priority": "low",
      "path": "../cli",
      "dependencies": ["web", "backend", "bloc"],
      "config": {
        "commands": {
          "deploy": true,
          "generate": true,
          "validate": true,
          "test": true
        }
      }
    },
    "gateway": {
      "enabled": true,
      "priority": "medium",
      "path": "../gateway",
      "dependencies": ["backend", "bloc"],
      "config": {
        "federation": {
          "enabled": true,
          "nodes": []
        },
        "indexing": {
          "enabled": true,
          "interval": 5000
        }
      }
    },
    "knowledge": {
      "enabled": true,
      "priority": "low",
      "path": "../knowledge",
      "dependencies": ["web"],
      "config": {
        "docs": {
          "framework": "docusaurus",
          "version": "2.4.0"
        }
      }
    }
  },
  "integration": {
    "eventSystem": {
      "enabled": true,
      "type": "pubsub",
      "channels": ["metaverso", "blockchain", "audio", "physics", "avatars"]
    },
    "sharedState": {
      "enabled": true,
      "type": "redis",
      "ttl": 3600
    },
    "crossModuleCommunication": {
      "enabled": true,
      "type": "http",
      "timeout": 30000
    },
    "unifiedLogging": {
      "enabled": true,
      "level": "info",
      "format": "json"
    }
  },
  "performance": {
    "moduleLoading": "lazy",
    "caching": {
      "enabled": true,
      "strategy": "lru",
      "maxSize": 100
    },
    "compression": {
      "enabled": true,
      "algorithm": "gzip",
      "level": 6
    },
    "optimization": {
      "enabled": true,
      "treeShaking": true,
      "minification": true
    }
  },
  "security": {
    "authentication": {
      "enabled": true,
      "type": "jwt",
      "expiration": 3600
    },
    "authorization": {
      "enabled": true,
      "type": "rbac"
    },
    "encryption": {
      "enabled": true,
      "algorithm": "AES-256-GCM"
    },
    "rateLimiting": {
      "enabled": true,
      "requests": 1000,
      "window": 60
    }
  },
  "monitoring": {
    "metrics": {
      "enabled": true,
      "port": 9090,
      "path": "/metrics"
    },
    "health": {
      "enabled": true,
      "endpoint": "/health",
      "interval": 30000
    },
    "alerts": {
      "enabled": true,
      "webhook": "",
      "threshold": 0.9
    }
  },
  "deployment": {
    "environments": {
      "development": {
        "autoStart": true,
        "hotReload": true,
        "debug": true
      },
      "staging": {
        "autoStart": false,
        "hotReload": false,
        "debug": false
      },
      "production": {
        "autoStart": false,
        "hotReload": false,
        "debug": false
      }
    },
    "docker": {
      "enabled": true,
      "compose": true,
      "kubernetes": false
    }
  },
  "metadata": {
    "created": "2025-01-01T00:00:00Z",
    "updated": "2025-01-01T00:00:00Z",
    "maintainer": "Metaverso Team",
    "contact": "team@metaverso.com",
    "documentation": "https://metaverso.com/docs"
  }
} 