{
  "name": "@metaverso/fonts",
  "version": "1.0.0",
  "description": "Sistema de gestión de fuentes tipográficas descentralizado para el metaverso",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "test:performance": "jest --config jest.performance.config.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "docs": "typedoc src/index.ts --out docs",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build && npm test",
    "example": "ts-node examples/basic-usage.ts",
    "example:3d": "ts-node examples/3d-rendering.ts",
    "example:ipfs": "ts-node examples/ipfs-integration.ts"
  },
  "keywords": [
    "metaverso",
    "fonts",
    "typography",
    "3d",
    "webgl",
    "ipfs",
    "blockchain",
    "decentralized",
    "optimization",
    "accessibility"
  ],
  "author": "Metaverso Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tu-usuario/metaverso-crypto-world-virtual-3d.git",
    "directory": "fonts"
  },
  "bugs": {
    "url": "https://github.com/tu-usuario/metaverso-crypto-world-virtual-3d/issues"
  },
  "homepage": "https://github.com/tu-usuario/metaverso-crypto-world-virtual-3d#readme",
  "dependencies": {
    "ipfs-http-client": "^60.0.0",
    "multiformats": "^12.0.0",
    "three": "^0.158.0",
    "opentype.js": "^1.3.4",
    "fontkit": "^2.0.2",
    "sharp": "^0.32.6",
    "crypto": "^1.0.1",
    "events": "^3.3.0",
    "fs-extra": "^11.1.1",
    "path": "^0.12.7",
    "url": "^0.11.3",
    "querystring": "^0.2.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/three": "^0.158.0",
    "@types/opentype.js": "^1.3.4",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.25.0",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "three": "^0.158.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  }
} 