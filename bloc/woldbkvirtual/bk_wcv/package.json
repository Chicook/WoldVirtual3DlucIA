{
  "name": "wcv-blockchain",
  "version": "2.0.0",
  "description": "Blockchain personalizada WCV con token nativo de 30 millones de unidades y 3 decimales",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "compile": "hardhat compile",
    "deploy": "hardhat run scripts/deploy.js",
    "deploy:local": "hardhat run scripts/deploy.js --network wcvLocal",
    "deploy:test": "hardhat run scripts/deploy.js --network wcvTest",
    "node": "hardhat node",
    "console": "hardhat console",
    "verify": "hardhat verify",
    "clean": "hardhat clean",
    "coverage": "hardhat coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "setup": "node scripts/setup.js",
    "bridge:deploy": "hardhat run scripts/deploy-bridge.js",
    "bridge:test": "hardhat run scripts/test-bridge.js"
  },
  "keywords": [
    "blockchain",
    "wcv",
    "cryptocurrency",
    "smart-contracts",
    "ethereum",
    "binance-smart-chain",
    "metamask",
    "bridge"
  ],
  "author": "WoldVirtual3D Team",
  "license": "MIT",
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "ethers": "^6.8.0",
    "web3": "^4.2.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "crypto": "^1.0.1",
    "uuid": "^9.0.0",
    "ws": "^8.14.2",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "winston": "^3.11.0",
    "node-cron": "^3.0.3",
    "axios": "^1.6.0",
    "redis": "^4.6.10",
    "mongoose": "^8.0.0",
    "multer": "^1.4.5-lts.1",
    "joi": "^17.11.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
